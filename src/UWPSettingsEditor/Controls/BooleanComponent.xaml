<UserControl x:Class="UWPSettingsEditor.Controls.BooleanComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UWPSettingsEditor.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Height="32" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Column="0" Text="Boolean Value:" VerticalAlignment="Center" Margin="0,0,8,0" />
        <ComboBox Grid.Column="1" x:Name="cmBox" Height="32">
            <ComboBoxItem Tag="true">
                <TextBlock Padding="4,0,0,0">True</TextBlock></ComboBoxItem>
            <ComboBoxItem Tag="false">
                <TextBlock Padding="4,0,0,0">False</TextBlock>
            </ComboBoxItem>
        </ComboBox>
    </Grid>
</UserControl>
